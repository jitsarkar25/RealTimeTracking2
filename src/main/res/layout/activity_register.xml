<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    tools:context="com.example.jit.myapplication.RegisterActivity">
    <ImageView
        android:layout_width="match_parent"
       android:layout_marginTop="50dp"
        android:layout_height="100dp"
        android:src="@drawable/trackit"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"


        />
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_marginTop="100dp"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Enter Email Address"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/inputback"
        android:padding="15dp"
        android:ems="10"
        android:drawableLeft="@drawable/mai"
        android:drawablePadding="5dp"
        android:id="@+id/etEmailRegister" />

    <EditText
        android:layout_width="270dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/inputback"
        android:padding="15dp"
        android:drawableLeft="@drawable/passwordicon"
        android:drawablePadding="5dp"
        android:textColorHint="#ffffff"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/etEmailLogin"
        android:hint="Enter Password"
        android:ems="10"
        android:id="@+id/etPasswordRegister" />
    <EditText
        android:layout_width="270dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/inputback"
        android:padding="15dp"
        android:drawableLeft="@drawable/passwordicon"
        android:drawablePadding="5dp"
        android:textColorHint="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/etEmailLogin"
        android:hint="Confirm Password"
        android:ems="10"
        android:id="@+id/etConfirmPasswordRegister" />

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/bRegister"
        android:background="@drawable/btnback"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etPasswordLogin"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Already registered? Sign In"
        android:layout_alignParentBottom="true"
        android:id="@+id/tvSignIn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
</RelativeLayout>
