<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#424242"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="70dp"
        android:id="@+id/ivmyFriendsDp"
        android:src="@drawable/userpic"
        android:layout_margin="10dp"
        android:layout_height="75dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Barnali Singh"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="left"
        android:id="@+id/tvMyFriendName" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:weightSum="100"
        android:gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Track"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:layout_weight="50"
            android:layout_margin="10dp"
            android:background="@drawable/sqrbtnback"
            android:id="@+id/bSendTrackReq"
            android:layout_gravity="right" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove Friend"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/sqrbtnback"
            android:id="@+id/bRemoveFriend"
            android:layout_weight="50"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>