<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    tools:context="com.example.jit.myapplication.ForgotPasswordActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/trackit"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:id="@+id/trackit"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textColor="#EACC20"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_below="@+id/trackit"
        />

    <EditText
        android:id="@+id/etForgotEmail"
        android:layout_width="270dp"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_marginTop="267dp"
        android:ems="10"
        android:hint="Enter email id"
        android:textColorHint="#ffffff"
        android:background="@drawable/inputback"
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/mai"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:inputType="textEmailAddress"

     />

    <Button
        android:id="@+id/button4"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:onClick="sendmail"
        android:background="@drawable/btnback"
        android:layout_below="@+id/etForgotEmail"
        android:layout_centerHorizontal="true"
        android:text="Send Mail" />
</RelativeLayout>
